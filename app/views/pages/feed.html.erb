          <p class="away club-name"><%= result.away_club_name %></p>
        </div>

      <% end %>

      <h4 class="competition"><%= @results3[0].competition.name %></h4>
      <% @results3.each do |result| %>
        <div class = "match">
          <p class="home1 club-name"><%= result.home_club_name %></p>
          <p class= "result"><%= result.home_club_goals %> - <%=result.away_club_goals %> </p>
          <p class="away club-name"><%= result.away_club_name %></p>
        </div>

      <% end %>
    </div>

