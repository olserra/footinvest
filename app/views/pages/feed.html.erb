   <!-- ****************+TOP WINNERS / LOSERS ****************++ -->
  <div class="tops">

      <h3 class="title">TOP WINNERS</h3>
      <div  class="feed-cards">
        <% @top_winners.each do |key, value| %>
          <%#= link_to player_path(@players.where(id: key)[0]) do %>
            <div class="card-trip">
              <%= image_tag(@players.where(id: key)[0].photo) %>
              <div class="card-trip-infos">
                <div class="player-info-left">
                  <h3><%= @players.where(id: key)[0].name %></h3>
                  <p> <strong> <%= @players.where(id: key)[0].club.name %> </strong> ( <%= @players.where(id: key)[0].position.downcase %> ) </p>
                </div>
                <div class="player-info-right">
                  <p id="green"> <strong><%= value %>%</strong> </p>
                </div>
              </div>
            </div>
          <%# end %>
        <% end %>
      </div>

      <h3 class="title">TOP LOSERS</h3>
      <div class="feed-cards">
        <% @top_losers.each do |key, value| %>

          <div class="card-trip">
            <%= image_tag(@players.where(id: key)[0].photo)%>
            <div class="card-trip-infos">
              <div class="player-info-left">
                <h3><%= @players.where(id: key)[0].name %></h3>
                <p> <strong> <%= @players.where(id: key)[0].club.name %> </strong> ( <%= @players.where(id: key)[0].position.downcase %> ) </p>
              </div>
              <p id="red"> <strong><%= value %>%</strong></p>
            </div>
          </div>

      <% end %>
      </div>


    <div class="newspaper">
      <h3 class="title">NEWS</h3>
      <div class="feed-cards">
        <% @img_array.each do |i|  %>
            <div class="news-trip">
              <img src=" <%= i %> ">
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

