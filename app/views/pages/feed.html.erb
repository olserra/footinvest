   <!-- ****************+TOP WINNERS / LOSERS ****************++ -->
  <div class="tops">

      <div class="row">
        <h4 class="title">TOP WINNERS</h4>
        <div  class="feed-cards">
          <% @top_winners.each do |key, value| %>
            <div class="col-xs-12 col-sm-6 col-md-4">
              <div class="card-trip">
                <%= image_tag(@players.where(id: key)[0].photo)%>
                <div class="card-trip-infos">
                  <div class="player-info-left">
                    <h3><%= @players.where(id: key)[0].name %></h3>
                    <p> <strong> <%= @players.where(id: key)[0].club.name %> </strong> ( <%= @players.where(id: key)[0].position.downcase %> ) </p>
                  </div>
                  <div class="player-info-right">
                    <p id="green"><%= value %>%</p>
                  </div>
                </div>
              </div>
              <br>
              <br>
            </div>
          <% end %>
        </div>
      </div>


      <div class="row">
        <h4 class="title">TOP LOSERS</h4>
        <div class="feed-cards">
          <% @top_losers.each do |key, value| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card-trip">
              <%= image_tag(@players.where(id: key)[0].photo, crop: :fill)%>
              <div class="card-trip-infos">
                <div class="player-info-left">
                  <h3><%= @players.where(id: key)[0].name %></h3>
                  <p> <strong> <%= @players.where(id: key)[0].club.name %> </strong> ( <%= @players.where(id: key)[0].position.downcase %> ) </p>
                </div>
                <p id="red"><%= value %>%</p>
              </div>
            </div>
            <br>
            <br>
          </div>
        <% end %>
        </div>
      </div>


      <div class="row">
      <h4 class="title">NEWS</h4>

        <% @img_array.each do |i|  %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="news-trip">
              <img src=" <%= i %> ">
            </div>
          </div>
        <% end %>

      </div>

  </div>

