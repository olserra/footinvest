
<div class="row">
    <% @players.each do |player| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to player_path(player) do %>
            <div class="card-trip">
              <%= image_tag(player.photo, height: '60', width: '60', crop: :fill)%>
              <div class="card-trip-infos">
                <div id="player">
                  <h2><%= player.name %></h2>
                  <p><%= player.club.name %></p>
                  <p><%= player.age %></p>
                  <p><%= player.nationality %></p>
                  <p>Avilable tokens: <%= player.tokens.where(on_sale: true).count %> </p>
                  <p><em><%= player.position %></em></p>
                </div>
              </div>
            </div>
          <% end %>
<br>
<br>
      </div>
    <% end %>
  </div>

